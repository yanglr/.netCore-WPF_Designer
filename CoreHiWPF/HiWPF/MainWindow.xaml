<Window x:Class="HiWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HiWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label x:Name="label1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">
            <TextBlock x:Name="tb1" TextWrapping="WrapWithOverflow">
                Hi WPF
            </TextBlock>
        </Label>
        <Button Content="Exit" Grid.Row="1" FontSize="20" Click='ButtonExit_Click'/>
    </Grid>
</Window>
